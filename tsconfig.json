{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["./backend/src/*"],
      "@frontend/*": ["./frontend/src/*"],
      "@infra/*": ["./infra/lib/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "cdk.out"
  ]
}